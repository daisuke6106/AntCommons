<?xml version="1.0" encoding="UTF-8"?>
<project name="taskdef">
	<script language="javascript">
		<![CDATA[
			load("nashorn:mozilla_compat.js");
			importClass(java.io.File);
			dir  = project.getProperty("ant.file.taskdef");
			file = new File(dir);
			path = file.getParent();
			project.setProperty("taskdef.home", path);
		]]>
	</script>
 		
	<!-- Ant-Contlibのタスク定義 -->
	<taskdef resource="net/sf/antcontrib/antlib.xml">
		<classpath>
			<pathelement location="${taskdef.home}/ant-contrib/ant-contrib-1.0b3.jar"/>
		</classpath>
	</taskdef>
	
	<!-- FindBugsのタスク定義 -->
	<taskdef name="findbugs" classname="edu.umd.cs.findbugs.anttask.FindBugsTask">
		<classpath>
			<pathelement location="${taskdef.home}/findbugs/findbugs-2.0.2/lib/findbugs-ant.jar"/>
		</classpath>
	</taskdef>
	
	<!-- CheckStyleのタスク定義 -->
	<taskdef resource="checkstyletask.properties" classpath="${taskdef.home}/checkstyle/checkstyle-5.6/checkstyle-5.6-all.jar"/>
	
	<!-- Ant-dklibのタスク定義 -->
	<taskdef resource="jp/co/dk/anttask/antlib.xml">
		<classpath>
			<pathelement location="${taskdef.home}/ant-dklib/ant_dklib_all.jar"/>
			<pathelement location="${taskdef.home}/ant-dklib/lib/commons-collections-3.2.1.jar"/>
			<pathelement location="${taskdef.home}/ant-dklib/lib/commons-configuration-1.6.jar"/>
			<pathelement location="${taskdef.home}/ant-dklib/lib/commons-lang-2.6.jar"/>
			<pathelement location="${taskdef.home}/ant-dklib/lib/commons-logging-1.1.1.jar"/>
			<pathelement location="${taskdef.home}/ant-dklib/lib/ipmsg.jar"/>
		</classpath>
	</taskdef>
</project>