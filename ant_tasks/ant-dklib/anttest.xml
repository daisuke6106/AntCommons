<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".">
    <taskdef resource="jp/co/dk/anttask/antlib.xml">
      <classpath>
        <pathelement location="./classes"/>
      	<pathelement location="./lib/ipmsg.jar"/>
      	<pathelement location="./lib/commons-configuration-1.6.jar"/>
      	<pathelement location="./lib/commons-lang-2.6.jar"/>
      	<pathelement location="./lib/commons-collections-3.2.1.jar"/>
      	<pathelement location="./lib/commons-logging-1.1.1.jar"/>
      </classpath>
    </taskdef>
    
	<target name="fileexist">
    	<fileexist file="C:/test.txt2">
    		<true>
    			<echo message="true"/>
    		</true>
    		<false>
    			<echo message="false"/>
    		</false>
    	</fileexist>
    </target>
	
    <target name="forfile">
    	<forfile type="f" file="C:\">
    		<echo message="${forfile.name}"/>
    	</forfile>
    </target>
	
	<target name="ipmsg">
    	<ipmsg tolist="192.168.1.9" msgfile="C:/test.txt2"/>
	</target>
	
	<target name="list">
		<list id="a"/>
	</target>
	
	<target name="listadd">
		<listadd id="a" add="test"/>
	</target>
	
	<target name="listcontains">
		<listadd id="a" add="test"/>
		<listcontains id="a" has="test">
			<echo message="haittemasu"/>
		</listcontains>
	</target>
	
	<target name="listeach">
		<listadd id="a" add="test1"/>
		<listadd id="a" add="test2"/>
		<listeach id="a">
			<echo message="${listeach.str}"/>
		</listeach>
	</target>
	

	<target name="listcopy">
		<listadd id="a" add="test1"/>
		<listadd id="a" add="test2"/>
		<listcopy id="a" newid="b"/>
		<listeach id="a">
			<echo message="${listeach.str}"/>
		</listeach>
		<listeach id="b">
			<echo message="${listeach.str}"/>
		</listeach>
	</target>
	
	<target name="listremove">
		<listadd id="a" add="test1"/>
		<listadd id="a" add="test2"/>
		
		<listremove id="a" remove="test1"/>
			
		<listeach id="a">
			<echo message="${listeach.str}"/>
		</listeach>
	</target>
	
	<target name="listremoveall">
		<listadd id="a" add="test1"/>
		<listadd id="a" add="test2"/>
		<listcopy id="a" newid="b"/>
		<listadd id="a" add="test3"/>
		<listremoveall id="a" removeid="b"/>
		<listeach id="a">
			<echo message="${listeach.str}"/>
		</listeach>
	</target>
	
	<target name="propertyfile">
		<propertyfile file="./prop.properties"/>
		<echo message="${key1}"/>
		<echo message="${key2}"/>
	</target>
</project>